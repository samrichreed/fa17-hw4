<h1>Hello There! Welcome to homework 4!</h1>

<table>
  <tr>
    <th>Cats</th>
  </tr>
  <% @cat.each do |cat| %>
    <tr>
      <td><%= cat.name %></td>
    </tr>
  <% end %>
</table>

<table>
  <tr>
    <th>Todo List</th>
  </tr>
  <% @todo.each do |todo| %>
    <tr>
      <td><%= todo.tasks %></td>
      <td><%= todo.finished %></td>
    </tr>
  <% end %>
</table>

<table>
  <tr>
    <th>Users</th>
  </tr>
  <% @user.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= user.age %></td>
    </tr>
  <% end %>
</table>
<br>
